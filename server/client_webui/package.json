{
  "name": "client_webui",
  "version": "1.0.0",
  "description": "A web application utilizing LitElement, esbuild, and Tailwind CSS.",
  "main": "src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=public/bundle.js --minify",
    "watch": "esbuild src/index.ts --bundle --outfile=public/bundle.js --watch",
    "start": "esbuild src/index.ts --bundle --outfile=public/bundle.js --watch & serve public"
  },
